.papyrus(style='color: rgb(208, 177, 22); margin-top: 10px;') Deck View Slider

#demo(style='margin-bottom: 100px;')
  .container(style='background-color: rgba(34, 29, 2, 0.5);')
    .row
      .span12
        #owl-demo.owl-carousel
            each item in data
                if item.mult_id > 0
                  .item
                    img(src="https://api.mtgdb.info/content/hi_res_card_images/" + item.mult_id + ".jpg", alt='Owl Image', height=333, onError="this.src = '/mtgdeckbuilder/cards/Magic_Card_Back.png'")
                  
.papyrus(style='color: rgb(208, 177, 22); margin-top: 10px; ') Deck View Table

table.table.table-striped
    thead
        tr
            th
    tbody
        each item in data
            tr
                if item.mult_id > 0
                    
                    button.btn.btn-primary(onClick='deck.removeCard(#{JSON.stringify(item)})')
                        img(src="https://api.mtgdb.info/content/hi_res_card_images/" + item.mult_id + ".jpg", height=333, onError="this.src = '/mtgdeckbuilder/cards/Magic_Card_Back.png'")

script(src='owl.carousel/assets/js/jquery-1.9.1.min.js')
script(src='owl.carousel/owl-carousel/owl.carousel.js')
script.
  $(document).ready(function() {
  $("#owl-demo").owlCarousel({
  autoPlay: 5000,
  items : 4,
  itemsDesktop : [1199,3],
  itemsDesktopSmall : [979,3]
  });
  });
