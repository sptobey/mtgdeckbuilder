h5 Search
.row
    .col-md-8
        .form-group.form-group-default
            label Cards
            input#card.form-control(type='text', required='')
    
            button.btn.btn-primary(onClick='cards.searchByName($("#card").val(), $("#white").on(), $("#blue").on(), $("#black").on(), $("#red").on(), $("#green").on(), $("#multicolor").on(), $("#format").val(), $("#type").val(), $("#supertype").val(), $("#cmc").val(), $("#rarity").val())',style='margin-bottom:15px') Search
.row
    .col-md-1
        label 
            img(src="style/pages/img/icons/White_Mana.png", style='margin-left: 23px;') 
            input#white.checkbox(type='checkbox')
    .col-md-1
        label 
            img(src="style/pages/img/icons/Blue_Mana.png", style='margin-left: 23px;')  
            input#blue.checkbox(type='checkbox')
    .col-md-1
        label
            img(src="style/pages/img/icons/Black_Mana.png", style='margin-left: 23px;')  
            input#black.checkbox(type='checkbox')
    .col-md-1
        label
            img(src="style/pages/img/icons/Red_Mana.png", style='margin-left: 23px;')
            input#red.checkbox(type='checkbox')
    .col-md-1
        label
            img(src="style/pages/img/icons/Green_Mana.png", style='margin-left: 23px;')  
            input#green.checkbox(type='checkbox')
    .col-md-1
        label
            img(src="style/pages/img/icons/multicolored_icon.png",style='margin-left: 23px;')  
            input#multicolor.checkbox(type='checkbox')
    // Because deckbrew is dumb, no colorless
