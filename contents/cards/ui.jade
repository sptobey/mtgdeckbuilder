        label Blue  
            input#blue.checkbox(type='checkbox')
    .col-md-1
        label Black  
            input#black.checkbox(type='checkbox')
    .col-md-1
        label Red  
            input#red.checkbox(type='checkbox')
    .col-md-1
        label Green  
            input#green.checkbox(type='checkbox')
    label Coloress  
        input#colorless.checkbox(type='checkbox')
