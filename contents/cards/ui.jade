h5 Search
.row
    .col-md-8
        .form-group.form-group-default
            label Cards
            input#card.form-control(type='text', required='')
    .col-md-4
        button.btn.btn-primary(onClick='cards.searchByName($("#card").val(), $("#white").on(), $("#blue").on(), $("#black").on(), $("#red").on(), $("#green").on(), $("#colorless").on(), $("#cmc").val(), $("#type").val())') Search
.row
    .col-md-1
        label White  
            input#white.checkbox(type='checkbox')
    .col-md-1
        label Blue  
            input#blue.checkbox(type='checkbox')
    .col-md-1
        label Black  
            input#black.checkbox(type='checkbox')
    .col-md-1
        label Red  
            input#red.checkbox(type='checkbox')
    .col-md-1
        label Green  
            input#green.checkbox(type='checkbox')
    label Coloress  
        input#colorless.checkbox(type='checkbox')
.row
    .col-md-4
        label Converted Mana Cost
            input#cmc(type='text', required='')
    .col-md-8
        label Type
            select#type
                option(value='') Any
                option(value='artifact') Artifact
                option(value='creature') Creature
                option(value='enchantment') Enchantment
                option(value='instant') Instant
                option(value='land') Land
                option(value='phenomenon') Phenomenon
                option(value='plane') Plane
                option(value='planeswalker') Planeswalker
                option(value='scheme') Scheme
                option(value='sorcery') Sorcery
                option(value='tribal') Tribal
                option(value='vanguard') Vanguard
                